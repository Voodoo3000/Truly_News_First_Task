<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="news"
                   type="kz.epam.intlab.instance.News"/>
    </form-beans>

    <action-mappings>
        <action path="/main"
                type="kz.epam.intlab.action.OpenMainPageAction"
                name="news">
            <forward name="success" path="/main.jsp"/>
        </action>
        <action path="/openNews"
                type="kz.epam.intlab.action.OpenSelectedNewsAction"
                name="news"
                input="main.jsp">
            <forward name="success" path="/edit.jsp"/>
        </action>
        <action path="/update"
                type="kz.epam.intlab.action.UpdateAction"
                name="news"
                input="/edit.jsp">
            <forward name="success" path="/main.jsp"/>
        </action>
    </action-mappings>

</struts-config>