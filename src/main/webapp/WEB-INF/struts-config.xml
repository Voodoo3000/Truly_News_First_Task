<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="news"
                   type="kz.epam.intlab.instance.News"/>
    </form-beans>

    <action-mappings>
        <action path="/main"
                type="kz.epam.intlab.action.OpenMainPageAction">
            <forward name="success" path="/main.jsp"/>
        </action>
        <action path="/openSelectedNews"
                type="kz.epam.intlab.action.OpenSelectedNewsAction"
                name="news"
                input="main.jsp">
            <forward name="success" path="/selected_news.jsp"/>
        </action>
        <action path="/openEditMode"
                type="kz.epam.intlab.action.OpenSelectedNewsAction"
                name="news">
            <forward name="success" path="/edit_mode.jsp"/>
        </action>
        <action path="/addUpdateNews"
                type="kz.epam.intlab.action.AddUpdateNewsAction"
                name="news">
            <forward name="success" path="/selected_news.jsp"/>
        </action>
        <action path="/deleteNews"
                type="kz.epam.intlab.action.DeleteNewsAction"
                name="news">
            <forward name="success" path="/main.jsp"/>
        </action>
        <action path="/deleteSelectedNews"
                type="kz.epam.intlab.action.DeleteSelectedNews"
                name="news"
                input="main.jsp">
            <forward name="success" path="/main.jsp"/>
        </action>
    </action-mappings>

</struts-config>